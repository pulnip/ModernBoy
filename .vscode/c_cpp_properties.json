{
    "env": {
        "MINGW_ROOT": "${MSYS_ROOT}/mingw64",
        "MINGW_INCLUDE": "${MINGW_ROOT}/include",
        "MINGW_BIN": "${MINGW_ROOT}/bin",
        "VCPKG_INSTALLED": "${workspaceFolder}/generated/vcpkg_installed",
        "VCPKG_TRIPLET": "x64-mingw-dynamic",
        "VCPKG_TRIPLET_ROOT": "${VCPKG_INSTALLED}/${VCPKG_TRIPLET}"
    },
    "configurations": [
        {
            "name": "Win32",
            "includePath": [
                "${MINGW_INCLUDE}/directxmath",
                "${MINGW_INCLUDE}/directxtk",
                "${VCPKG_TRIPLET_ROOT}/include",
                "${workspaceFolder}/include"
            ],
            "defines": [
                "_DEBUG",
                "UNICODE",
                "_UNICODE"
            ],
            "windowsSdkVersion": "10.0.22621.0",
            "cStandard": "c23",
            "cppStandard": "c++23",
            "intelliSenseMode": "windows-clang-x64",
            "compilerPath": "${MINGW_BIN}/clang++.exe",
            "configurationProvider": "ms-vscode.cmake-tools"
        }
    ],
    "version": 4
}