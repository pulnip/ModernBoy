{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 28
    },
    "configurePresets": [
        {
            "name": "Ninja",
            "hidden": true,
            "generator": "Ninja"
        },
        {
            "name": "VCPKG",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE":{
                    "value": "$penv{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                    "type": "FILEPATH"
                },
                "VCPKG_INSTALLED_DIR": "${sourceDir}/build/vcpkg_installed"
            }
        },
        {
            "name": "x64",
            "hidden": true,
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "toolset": {
                "value": "host=x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "DIRECTX_ARCH": "x64"
            }
        },
        {
            "name": "MSVC",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "cl.exe"
            }
        },
        {
            "name": "GNUC",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "g++.exe"
            }
        },
        {
            "name": "Clang",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "clang++.exe",
                "CMAKE_CXX_FLAGS": "-fuse-ld=lld"
            }
        },
        {
            "name": "MinGW-w64",
            "hidden": true,
            "environment": {
                "PATH": "$penv{PATH}"
            },
            "cacheVariables": {
                "VCPKG_TARGET_TRIPLET": "x64-mingw-dynamic",
                "VCPKG_HOST_TRIPLET": "x64-mingw-dynamic"
            }
        },
        {
            "name": "base",
            "hidden": true,
            "inherits": [
                "Ninja",
                "x64",
                "Clang",
                "VCPKG",
                "MinGW-w64"
            ],
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/${presetName}"
            }
        },
        {
            "name": "Debug",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/Debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "Release",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/Release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "CMAKE_INTERPROCEDURAL_OPTIMIZATION": true
            }
        },
        {
            "name": "x64-Debug-MinGW",
            "displayName": "Debug build",
            "description": "MinGW-w64 (Debug)",
            "inherits": [
                "base",
                "Debug"
            ]
        },
        {
            "name": "x64-Release-MinGW",
            "displayName": "Release build",
            "description": "MinGW-w64 (Release)",
            "inherits": [
                "base",
                "Release"
            ]
        }
    ],
    "testPresets": [
        {
            "name": "x64-Release-Test",
            "displayName": "gTest for Release",
            "description": "Google Test (Release)",
            "configurePreset": "x64-Release-MinGW",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "timeout": 10,
                "stopOnFailure": true
            }
        }
    ]
}