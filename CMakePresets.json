{
    "version": 2,
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "displayName": "Basic Config",
            "description": "Basic build using Ninja generator",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/${presetName}"
            }
        },
        {
            "name": "VCPKG",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                "VCPKG_INSTALLED_DIR": "${sourceDir}/build/vcpkg_installed"
            }
        },
        {
            "name": "x64",
            "hidden": true,
            "architecture": {
                "strategy": "external"
            },
            "cacheVariables": {
                "DIRECTX_ARCH": "x64"
            }
        },
        {
            "name": "GNUC",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "g++.exe"
            },
            "toolset": {
                "value": "host=x64",
                "strategy": "external"
            }
        },
        {
            "name": "MinGW-w64",
            "hidden": true,
            "environment": {
                "PATH": "$penv{PATH};c:/mingw64/bin"
            },
            "cacheVariables": {
                "VCPKG_TARGET_TRIPLET": "x64-mingw-dynamic",
                "VCPKG_HOST_TRIPLET": "x64-mingw-dynamic"
            }
        },
        {
            "name": "Debug",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/Debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "Release",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/Release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "CMAKE_INTERPROCEDURAL_OPTIMIZATION": true
            }
        },
        {
            "name": "x64-Debug-MinGW",
            "description": "MinGW-w64 (Debug)",
            "inherits": [
                "base",
                "x64",
                "Debug",
                "GNUC",
                "VCPKG",
                "MinGW-w64"
            ]
        },
        {
            "name": "x64-Release-MinGW",
            "description": "MinGW-w64 (Release)",
            "inherits": [
                "base",
                "x64",
                "Release",
                "GNUC",
                "VCPKG",
                "MinGW-w64"
            ]
        }
    ]
}